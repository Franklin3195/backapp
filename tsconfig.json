{
    "compilerOptions": {
      "rootDir": "src",
      "module": "commonjs",
      "declaration": false,
      "noImplicitAny": false,
      "skipLibCheck": true,
      "removeComments": true,
      "noLib": false,
      "allowSyntheticDefaultImports": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "target": "ES2017",
      "sourceMap": true,
      "outDir": "./dist",
      "baseUrl": "./src",
      "noEmit": false    ,
      "incremental": false,
      "strictNullChecks": true,
      "lib": [
        "ES2021.String"
      ]
    },
    "include": [
      "src/**/*"
  , "src/modules/profile/descomprimirArchivos", "src/modules/profile/extractFiles"  ],
    "exclude": [
      "node_modules",
      "node_modules/typescript/lib/lib.es2015.promise.d.ts",
      "**/*.spec.ts"
    ]
  }